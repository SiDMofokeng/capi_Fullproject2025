<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamlTester.App">

    <Application.Resources>
        <ResourceDictionary>

            <!-- Colors -->
            <Color x:Key="PrimaryColor">#1E50A2</Color>
            <Color x:Key="SecondaryColor">#8091AE</Color>
            <Color x:Key="AccentColor">#04AA6D</Color>
            <Color x:Key="BackgroundColor">#F2F2F2</Color>
            <Color x:Key="TextColor">Black</Color>
            <Color x:Key="InputBackgroundColor">#E0E0E0</Color>
            <Color x:Key="InputFieldColor">#E0E0E0</Color>
            <Color x:Key="SecondaryTextColor">#666666</Color>

            <!-- Button Styling -->
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="Margin" Value="5"/>
            </Style>

            <!-- Secondary Button -->
            <Style x:Key="SecondaryButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="TextColor" Value="{StaticResource PrimaryColor}"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="BorderColor" Value="{StaticResource PrimaryColor}"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="Margin" Value="5"/>
            </Style>

            <!-- Labels -->
            <Style TargetType="Label">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="TextColor" Value="{StaticResource TextColor}"/>
                <Setter Property="Margin" Value="5"/>
            </Style>

            <!-- Entry Fields -->
            <Style TargetType="Entry">
                <Setter Property="BackgroundColor" Value="{StaticResource InputFieldColor}"/>
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="PlaceholderColor" Value="Gray"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Margin" Value="10,5"/>
                <!-- Replaces Padding -->
                <Setter Property="HeightRequest" Value="40"/>
            </Style>


            <!-- Picker Styling -->
            <Style TargetType="Picker">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Margin" Value="10,5"/>
                <!-- Replace Padding -->
                <Setter Property="HeightRequest" Value="40"/>
            </Style>


        </ResourceDictionary>
    </Application.Resources>
</Application>
